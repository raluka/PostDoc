<!DOCTYPE html>
<html>
  <head>
    <title>Postdoc</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.keys.each do |key| %>
      <div class="alert #{key}"><%= flash[key] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
